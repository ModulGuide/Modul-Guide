        android:key="exampleCourseScheme"
        android:summary="Einen Musterstudeinplan für sein Studium aussuchen"
        android:title="Musterstudienplan auswählen" />


    
         <PreferenceCategory android:title="Fortschritt" >

        <Preference
            android:visibility="gone"
            android:key="resetDatabase"
            android:summary="Die App wird auf den Initalzustand zurückversetzt."
            android:title="Fortschritt zurücksetzen" />
    </PreferenceCategory>
    

    <PreferenceCategory android:title="Vorlesungsverzeichnis" >

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="university_calendar_favourite"
            android:summary="Wenn gesetzt, wird direkt der ausgewählte Favorit geöffnet"
            android:title="Direkt Favoriten öffnen" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Info" >

        <Preference
            android:enabled="false"
            android:summary="1.0.0"
            android:title="App-Version" />

        <Preference
            android:key="about"
            android:summary="App Informationen"
            android:title="Über" />

        <Preference
            android:key="faq"
            android:summary="Häufig gestellte Fragen"
            android:title="FAQ" />
        
        
        <Preference
            android:key="versions"
            android:summary="Änderungshistorie anzeigen"
            android:title="Änderungshistorie" />
        
        
        
    </PreferenceCategory>
