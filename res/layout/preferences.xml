<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:defaultValue="1"
        android:inputType="number"
        android:key="editTextPref"
        android:name="semesterCount"
        android:summary="Anzahl an bisherigen Fachsemestern"
        android:title="Fachsemester" />

    <Preference
        android:key="loadAndSaveExaminationRegulation"
        android:summary="Die ausgewählte Prüfungsordnung wird gespeichert"
        android:title="Prüfungsordnung auswählen" />

